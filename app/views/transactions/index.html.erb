<div class="container mt-5">
  <h1 class="text-center mb-4">Transactions</h1>
  <ul class="list-group">
    <% @transactions.each do |transaction| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "Transaction ##{transaction.id}", transaction_path(transaction) %>
        <span class="badge bg-primary rounded-pill"><%= transaction.crypto_type.capitalize %></span>
      </li>
    <% end %>
  </ul>
</div>


